
@model UpdateDto
<div class="container-scroller">
    <div class="container-fluid page-body-wrapper full-page-wrapper">
        <div class="content-wrapper d-flex align-items-center auth px-0">
            <div class="row w-100 mx-0">
                <div class="col-lg-4 mx-auto">
                    <div class="auth-form-light text-left py-5 px-4 px-sm-5">
                        <div class="brand-logo">
                            <img src="../../images/logo-dark.svg" alt="logo">
                        </div>
                        <h4>Hello! UpdatePage</h4>
                        <h6 class="font-weight-light">Update</h6>
                        <form class="pt-3" method="post">
                            <div class="alert alert-danger" asp-validation-summary="ModelOnly"></div>
                            <div class="form-group">
                                <input asp-for="Email" type="email" class="form-control form-control-lg" id="exampleInputEmail1" placeholder="email">
                                <span class="alert alert-text" asp-validation-for="Email"></span>

                            </div>
                            <div class="form-group">
                                <input asp-for="UserName"  type="text" class="form-control form-control-lg" id="exampleInputEmail1" placeholder="username">
                                <span class="alert alert-text" asp-validation-for="UserName"></span>

                            </div>
                             <div class="form-group">
                                <input asp-for ="OldPassword" type="password" class="form-control form-control-lg" id="exampleInputEmail1" placeholder="Oldpassword">
                                <span class="alert alert-text" asp-validation-for="OldPassword"></span>
                            </div>
                            <div class="form-group">
                                <input asp-for="NewPassword" type="password" class="form-control form-control-lg" id="exampleInputEmail1" placeholder="NewPassword">
                                <span class="alert alert-text" asp-validation-for="NewPassword"></span>
                            </div>
                           
                          <div class="mt-3">
                  <button class="btn btn-block btn-primary btn-lg font-weight-medium auth-form-btn" href="../../index.html">Update</button>
                           </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
        <!-- content-wrapper ends -->
    </div>
    <!-- page-body-wrapper ends -->
</div>