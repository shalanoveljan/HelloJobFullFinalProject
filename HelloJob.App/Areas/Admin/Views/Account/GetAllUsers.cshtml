
@model PagginatedResponse<AppUser>
@inject UserManager<AppUser> UserManager

<div class="main-panel">
    <div class="content-wrapper">
        <div class="row">
            <div class="col-lg-12 grid-margin stretch-card">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">User List</h4>
                        <div class="table-responsive">
                            <table class="table">
                                <thead>
                                    <tr>
                                        <th>Username</th>
                                        <th>Role</th>
                                        <th>Operations</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var user in Model.Datas)
                                    {
                                        var roles = await UserManager.GetRolesAsync(user);
                                            <tr>
                                                <td>@user.UserName</td>
                                            <td>@user.UserName</td>
                                            @foreach (var role in roles)
                                            {
                                                <td>@role</td>
                                            }
                                                <td>
                                                    <a onclick="return confirm('Are you sure?')" asp-action="remove" asp-route-id="@user.Id" class="badge badge-danger">Remove</a>
                                                    <a asp-controller="User" asp-action="update" asp-route-id="@user.Id" class="badge badge-warning">Update</a>
                                                    <a asp-action="block" asp-route-id="@user.Id" class="badge badge-primary">Block</a>
                                                </td>
                                            </tr>
                                    }
                                </tbody>
                            </table>

                            <nav aria-label="Page navigation example">
                                <ul class="pagination justify-content-center">
                                    <li class="page-item @(Model.PageNumber == 1 ? "disabled" : null)">
                                        <a class="page-link" asp-action="Index" asp-route-page="@(Model.PageNumber - 1)" tabindex="-1">Previous</a>
                                    </li>
                                    @for (int i = 1; i <= Model.TotalPages; i++)
                                    {
                                        <li class="page-item @(i == Model.PageNumber ? "active" : null)">
                                            <a class="page-link" asp-action="Index" asp-route-page="@i">@i</a>
                                        </li>
                                    }
                                    <li class="page-item @(Model.TotalPages == Model.PageNumber ? "disabled" : null)">
                                        <a class="page-link" asp-action="Index" asp-route-page="@(Model.PageNumber + 1)">Next</a>
                                    </li>
                                </ul>
                            </nav>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
