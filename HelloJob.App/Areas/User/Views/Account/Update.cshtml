@model UpdateDto

<div class="security">
    <div class="title">
        <h1>Təhlükəsizlik</h1>
    </div>
    <div class="security_tab">
        <div class="row">
            <div class="col-lg-6">
                <div class="allsecurity">
                    <form action="" method="post">
                        <div class="alert alert-danger" asp-validation-summary="ModelOnly"></div>

                        <div class="security-inputs">
                            <label asp-for="Email">Email</label>
                            <input type="email"
                                   asp-for="Email"
                                   class="form-control inputs"
                                   placeholder="email"
                                   disabled="" />
                            <span class="alert alert-text" asp-validation-for="Email"></span>

                        </div>
                        <div class="security-inputs">
                            <label asp-for="OldPassword">Mövcud Şifrəni Daxil Edin</label>
                            <input type="password"
                                   asp-for="OldPassword"
                                   class="form-control inputs"
                                   placeholder="********" />
                            <span class="alert alert-text" asp-validation-for="OldPassword"></span>

                        </div>
                        <div class="security-inputs">
                            <label asp-for="NewPassword">Yeni Şifrə</label>
                            <input type="password"
                                   asp-for="NewPassword"
                                   class="form-control inputs"
                                   placeholder="********" />
                            <span class="alert alert-text" asp-validation-for="NewPassword"></span>

                        </div>
                        <div class="save_button mb-0">
                            <button class="btn btn-submit submit" type="submit">Şifrəni yeniləmək</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>