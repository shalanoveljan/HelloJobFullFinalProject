                            <div class="cv_inputs">
                                <label for="">Minimum əmək haqqı AZN</label>
                                <input type="number"
                                       max="12000"
                                       name=""
                                       class="form-control inputs"
                                       placeholder="Məs:1500" />
                            </div>
                        </div>
                        <div class="col-lg-6">
                            <div class="cv_inputs">
                                <label for="">Sürücülük vəsiqəsi</label>
                                <div class="checkbox">
                                    <input type="checkbox" class="form-check-input mt-0">
                                    <span>Var</span>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="row mb-5">
                <div class="col-lg-2">
                    <h2 class="section_title">CV Faylı</h2>
                </div>
                <div class="col-lg-10">
                    <div class="form-group">
                        <input type="file"
                               class="d-none"
                               id="cv_inp"
                               name="cv_file"
                               multiple=""
                               accept=".pdf,.docx" />
                        <label for="cv_inp" class="cv_label">
                            <img src="https://www.hellojob.az/content/assets/images/profile/svg-icons/upload2.svg"
                                 alt="" />
                            <span>CV əlavə et</span>
                            <p>PDF, DOCX (max. 3mb)</p>
                        </label>
                    </div>
                    <div class="cv-file mb-5 active" style="display: none">
                        <img src="https://www.hellojob.az/content/assets/images/profile/svg-icons/file.svg"
                             alt="" />
                        <img class="check"
                             src="https://www.hellojob.az/content/assets/images/profile/svg-icons/check.svg"
                             alt="" />
                        <button type="button" class="remove">
                            <img src="https://www.hellojob.az/content/assets/images/profile/svg-icons/remove2.svg"
                                 alt="" />
                        </button>
                        <div class="d-block w-100">
                            <p class="file_name">Cv.pdf</p>
                            <div class="progress">
                                <div class="progressbar"
                                     role="progressbar"
                                     style="width: 100%"></div>
                                <span id="percent">100%</span>
                            </div>
                        </div>
                    </div>
                    <div id="uploaded_image"></div>
                </div>
            </div>
            <div class="submit-button">
                <button class="btn btn-primary submit">Təsdiq et</button>
            </div>
        </form>
    </div>
</div>

