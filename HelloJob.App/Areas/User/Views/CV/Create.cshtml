                                        <option>Fəhlə</option>
                                        <option>Turizm və mehmanxana işi</option>
                                        <option>Tərcüməçi</option>
                                        <option>Mühafizə xidməti</option>
                                        <option>Digər</option>
                                    </optgroup>
                                    <optgroup label="Dizayn">
                                        <option>3D modelləşdirmə</option>
