                            <div class="cv_inputs">
                                <label for="">Təhsil</label>
                                <select name="category" class="form-control cities">
                                    <option selected disabled>Təhsilinizi seçin</option>
                                    <option>Ali</option>
                                    <option>Natamam Ali</option>
                                    <option>Orta Texniki</option>
                                    <option>Orta Xüsusi</option>
                                    <option>Orta</option>
                                    <option>Digər</option>

                                </select>
                            </div>
                        </div>
                        <div class="col-lg-6">
                            <div class="cv_inputs">
                                <label for="">İş saatı</label>
                                <select name="category" class="form-control cities">
                                    <option selected disabled>İş saatı seçin</option>
                                    <option>Tam-ştat</option>
                                    <option>Freelance</option>
                                    <option>Part-time</option>
                                    <option>Təcrübəçi</option>
                                </select>
                            </div>
                        </div>
